  -H "Content-Type: application/json" \
  -d '{
    "name": "홍길동",
    "gender": "male",
    "birth_year": 1990,
    "birth_month": 5,
    "birth_day": 15,
    "address": "서울특별시 강남구",
    "detail_address": "테헤란로 123",
    "phone": "010-1234-5678",
    "no_phone": false,
    "reception_date": "2024-12-25",
    "product_name": "3개월 무제한",
    "product_price": 500000,
    "product_period": 3,
    "product_hours": 0,
    "payment_type": "card",
    "discount_name": "신규할인",
    "discount_rate": 10.5,
    "final_amount": 447500,
    "unpaid": false,
    "other_payment": "포인트",
    "visit_paths": ["지인추천", "포털검색", "SNS홍보"],
    "practice_method": "first",
    "practice_memo": "처음 운전을 배웁니다",
    "indoor_test_date": "2025-01-15",
    "road_test_date": "2025-02-15",
